<Window x:Class="ChatApp_Client.MainWindow"
        x:Name="winMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="rtbConsole" x:FieldModifier="public" HorizontalAlignment="Center" Height="253" Margin="0,30,0,0" VerticalAlignment="Top" Width="676" AcceptsReturn="False" IsReadOnly="True" FontFamily="Arial" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Center" Height="27" Margin="0,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="676" KeyUp="tbMessage_KeyUp"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Center" Height="35" Margin="0,359,0,0" VerticalAlignment="Top" Width="114" Click="btnSend_Click"/>

    </Grid>
</Window>
