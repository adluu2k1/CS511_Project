<Window x:Class="ChatApp_Client.MainWindow"
        x:Name="winMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" x:Name="rtbConsole" Margin="50, 30" AcceptsReturn="False" IsReadOnly="True" FontFamily="Arial" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBox x:Name="tbMessage" Width="650" Height="30" TextWrapping="Wrap" KeyUp="tbMessage_KeyUp" FontSize="15"/>
            <Button x:Name="btnImage" Height="30" Width="30" Margin="20, 0, 0, 0" Background="Transparent" BorderBrush="Transparent" Click="btnImage_Click">
                <Image Source="resources/image.png" Stretch="Fill"/>
            </Button>
        </StackPanel>
        
        <Button Grid.Row="2" x:Name="btnSend" Content="Send" HorizontalAlignment="Center" Height="35" VerticalAlignment="Top" Width="114" Click="btnSend_Click"/>

    </Grid>
</Window>
